mixin topnav(options)

    nav(class=['topnav', 'navbar', 'navbar-expand', 'shadow'] class=options.topnavStyle)#sidenavAccordion

        //- Navbar Brand Image or Text
        a.navbar-brand(href='/dashboard')
            image(src='/assets/img/logo-nexa-short.png', style='width:15%;height:15%;')
            | NEXA PMS

        //- Sidenav Toggle Button
        button#sidebarToggle.btn.btn-icon.btn-transparent-dark.order-1.order-lg-0.mr-lg-2(href='#')
            i(data-feather='menu')

        //- Navbar Items
        ul.navbar-nav.align-items-center.ml-auto
        
        if invites.length != 0
            //- Alerts Dropdown
            .nav-item.dropdown.no-caret.mr-3.dropdown-notifications
                a#navbarDropdownAlerts.btn.btn-icon.btn-transparent-dark.dropdown-toggle.bg-yellow(href='javascript:void(0);', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                    i(data-feather='bell')
                    | #{invites.length}
                .dropdown-menu.dropdown-menu-right.border-0.shadow.animated--fade-in-up(aria-labelledby='navbarDropdownAlerts')
                    a.dropdown-header.dropdown-notifications-header(href="/invites")
                        i.mr-2(data-feather='bell')
                        | Alerts Center
                        i(data-feather='arrow-right')
                    //- Example Alert 1
                    each invite in invites
                        a.dropdown-item.dropdown-notifications-item(href='/invites')
                            .dropdown-notifications-item-icon
                                i(data-feather='activity')
                            .dropdown-notifications-item-content
                                .dropdown-notifications-item-content-details
                                    | #{invite.createdAt.getFullYear()}/#{invite.createdAt.getMonth()+1}/#{invite.createdAt.getDate()}
                                .dropdown-notifications-item-content-text
                                    | #{invite.USER.NAME}님이 #{invite.PROJECT.NAME}으로 초대하셨습니다.
        else             
            .nav-item.dropdown.no-caret.mr-3.dropdown-notifications
